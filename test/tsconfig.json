{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "../",
    "declaration": false,
    "rootDir": "../",
    "rootDirs": [
      "../src",
      "../types"
    ],
    "typeRoots": [
      "../node_modules/@types",
      "../custom_types"
    ],
    "types": [
      "node",
      "mocha",
      "bitcore-lib-cash"
    ],
    "allowJs": false,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "../src/*": ["../ts_src/*"]
    }
  },
  "include": [
      "./**/*.ts"
  ],
  "exclude": [
      "../ts_src/**/*.ts"
  ]
}
