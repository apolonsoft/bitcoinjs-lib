{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "outDir": "./src",
    "declaration": true,
    "declarationDir": "./types",
    "rootDir": "./ts_src",
    "typeRoots": [
      "custom_types",
      "node_modules/@types"
    ],
    "types": [
      "node",
      "bitcore-lib-cash"
    ],
    "allowJs": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
      "ts_src/**/*.ts"
  ],
  "exclude": [
      "**/*.spec.ts",
      "node_modules/**/*"
  ]
}
